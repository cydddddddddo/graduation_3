<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.graduation_3.dao.UserDao">
    <select id="getUserByName" resultType="com.example.graduation_3.dto.User">
        SELECT
            id,name,password,role
        FROM
            demouser
        WHERE
            name = #{name}
    </select>

</mapper>